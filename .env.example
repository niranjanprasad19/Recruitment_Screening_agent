# Copy this file to .env and fill in your values

# ---- Database ----
DATABASE_URL=postgresql://rsa_user:rsa_password@localhost:5432/rsa_db
POSTGRES_DB=rsa_db
POSTGRES_USER=rsa_user
POSTGRES_PASSWORD=rsa_password

# ---- AI / NLP ----
HUGGINGFACE_API_TOKEN=hf_your_token_here
OPENAI_API_KEY=sk-your-openai-key-here

# ---- Application ----
SECRET_KEY=change-this-to-a-random-secret-key-in-production
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001
DEBUG=true

# ---- Redis (for Celery async tasks) ----
REDIS_URL=redis://localhost:6379/0

# ---- File Upload ----
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,docx,txt,doc

# ---- Data Retention (days) ----
DATA_RETENTION_DAYS=90

# ---- ATS Webhook ----
ATS_WEBHOOK_URL=https://your-ats.example.com/webhook
ATS_WEBHOOK_SECRET=your-webhook-secret
